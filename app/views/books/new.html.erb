<h2>Add New Book</h2>

<%= form_for @book do |f| %>

	<div class="form-group">
		<%= f.label :title %><br />
		<%= f.text_field :title, class:'form-control' %><br />
	</div>
    
    <div class="form-group">
        <%= f.label :all_groups %><br />
        <%= f.text_field :all_groups, class:'form-control' %><br />
    </div>

	<div class="form-group">
		<%= f.label :all_authors %><br />
		<%= f.text_field :all_authors, class:'form-control' %><br />
	</div>

	<div class="form-group">
		<%= f.label :image %><br />
		<%= f.file_field :image %><br />
	</div>

	<%= f.submit "Submit", class:'btn btn-primary' %>
	<%=link_to "Cancel", books_path, class:'btn btn-default' %>

<% end %>