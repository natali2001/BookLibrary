<h2>Edit Book</h2>

<%= form_for @book do |f| %>

	<div class="form-group">
		<%= f.label :title %><br />
		<%= f.text_field :title, class:'form-control' %><br />
	</div>
    
    <div class="form-group">
        <%= f.label :all_groups %><br />
        <%= f.text_field :all_groups, class:'form-control' %><br />
    </div>

	<div class="form-group">
		<%= f.label :all_authors %><br />
		<%= f.text_field :all_authors, class:'form-control' %><br />
	</div>
    
    <div class="form-group">
        <%= f.label :image do %>
            <% if not f.object.image.file.nil? %>
                The currently attached file is <%= f.object.image.current_path %>. Click here to replace this file.
            <% else %>
                No file has been uploaded yet. Please pick a file.
            <% end %>
        <% end %>

        <%= f.file_field :image %>
    </div>

	<%= f.submit "Submit", class:'btn btn-primary' %>
	<%=link_to "Cancel", books_path, class:'btn btn-default' %>

<% end %>